<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_15sdp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/bronze_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/vertical_margin_6"
            android:background="@color/white"
            app:cardElevation="@dimen/_1sdp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardUseCompatPadding="true"
            android:elevation="2dp">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">


                <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:elevation="10dp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_weight="0">


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/payment_commodity_img"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_85sdp"
                        android:scaleType="centerCrop"
                        android:transitionName="course_image"
                        app:srcCompat="@drawable/ic_pattern" />

                </android.support.v7.widget.CardView>

                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:id="@+id/payment_commodity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="عضویت برنزی"
                    app:layout_constraintEnd_toStartOf="@+id/cardView2"
                    app:layout_constraintTop_toTopOf="parent"
                    android:transitionName="course_title"
                    style="@style/big_text"/>


                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:id="@+id/payment_commodity_short_description"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="برای مخاطبانی که دارای محدودیت زمانی در کسب آموزش…."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cardView2"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/payment_commodity_title"
                    app:layout_constraintVertical_bias="0.333" />


                <com.ahmad.darwino.CusrtomViews.MyButton
                    android:id="@+id/bronze_button"
                    style="@style/medium"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/darwinland_fragment_button_background"
                    android:text="اطلاعات بیشتر"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/silver_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/vertical_margin_6"
            android:background="@color/white"
            app:cardElevation="@dimen/_1sdp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintTop_toBottomOf="@id/bronze_container"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardUseCompatPadding="true"
            android:elevation="2dp">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">


                <android.support.v7.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:elevation="10dp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="0"
                    app:layout_constraintTop_toTopOf="parent">


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_85sdp"
                        android:scaleType="centerCrop"
                        android:transitionName="course_image"
                        app:srcCompat="@drawable/ic_pattern" />

                </android.support.v7.widget.CardView>

                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:id="@+id/title2"
                    style="@style/big_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="عضویت نقره ای"
                    android:transitionName="course_title"
                    app:layout_constraintEnd_toStartOf="@+id/cardView3"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="برای مخاطبانی که دارای محدودیت زمانی در کسب آموزش…."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cardView3"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title2"
                    app:layout_constraintVertical_bias="0.333" />


                <com.ahmad.darwino.CusrtomViews.MyButton
                    android:id="@+id/silver_button"
                    style="@style/medium"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/darwinland_fragment_button_background"
                    android:text="اطلاعات بیشتر"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/gold_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/vertical_margin_6"
            android:background="@color/white"
            app:cardElevation="@dimen/_1sdp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintTop_toBottomOf="@id/silver_container"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardUseCompatPadding="true"
            android:elevation="2dp">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">


                <android.support.v7.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:elevation="10dp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="0"
                    app:layout_constraintTop_toTopOf="parent">


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_85sdp"
                        android:scaleType="centerCrop"
                        android:transitionName="course_image"
                        app:srcCompat="@drawable/ic_pattern" />

                </android.support.v7.widget.CardView>

                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:id="@+id/title3"
                    style="@style/big_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="عضویت طلایی"
                    android:transitionName="course_title"
                    app:layout_constraintEnd_toStartOf="@+id/cardView4"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="برای مخاطبانی که دارای محدودیت زمانی در کسب آموزش…."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cardView4"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title3"
                    app:layout_constraintVertical_bias="0.333" />


                <com.ahmad.darwino.CusrtomViews.MyButton
                    android:id="@+id/gold_button"
                    style="@style/medium"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/darwinland_fragment_button_background"
                    android:text="اطلاعات بیشتر"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/platinium_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/vertical_margin_6"
            android:background="@color/white"
            app:cardElevation="@dimen/_1sdp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintTop_toBottomOf="@id/gold_container"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardUseCompatPadding="true"
            android:elevation="2dp">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">


                <android.support.v7.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:elevation="10dp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="0"
                    app:layout_constraintTop_toTopOf="parent">


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_85sdp"
                        android:scaleType="centerCrop"
                        android:transitionName="course_image"
                        app:srcCompat="@drawable/ic_pattern" />

                </android.support.v7.widget.CardView>

                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:id="@+id/title4"
                    style="@style/big_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="عضویت پلاتینیوم"
                    android:transitionName="course_title"
                    app:layout_constraintEnd_toStartOf="@+id/cardView5"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="برای مخاطبانی که دارای محدودیت زمانی در کسب آموزش…."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cardView5"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title4"
                    app:layout_constraintVertical_bias="0.333" />


                <com.ahmad.darwino.CusrtomViews.MyButton
                    android:id="@+id/platinium_button"
                    style="@style/medium"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/darwinland_fragment_button_background"
                    android:text="اطلاعات بیشتر"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>



    </android.support.constraint.ConstraintLayout>



</android.support.v4.widget.NestedScrollView>
