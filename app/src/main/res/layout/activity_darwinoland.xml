<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="422dp"
        android:layout_height="61dp"
        android:background="@drawable/appbar_background"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:layoutDirection="rtl"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/activity_darwino_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-250dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="17dp"
            android:layout_toEndOf="@+id/activity_darwino_title"
            android:padding="@dimen/_4sdp"
            app:srcCompat="@drawable/ic_left_arrow" />

        <com.ahmad.darwino.CusrtomViews.MyTextView
            android:id="@+id/activity_darwino_title"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:textSize="20sp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="عضویت برنزی"
            android:textColor="#fff"
             />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="395dp"
        android:layout_height="654dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:padding="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_darwino_image"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:srcCompat="@drawable/ic_darwinobronze" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <com.ahmad.darwino.CusrtomViews.MyTextView
                            android:id="@+id/activity_darwino_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right|center_horizontal|center_vertical"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="عضویت برنزی"
                            android:textSize="18sp" />

                        <com.ahmad.darwino.CusrtomViews.MyTextView
                            android:id="@+id/activity_darwino_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|left|center_vertical"
                            android:paddingLeft="@dimen/_15sdp"
                            android:text="90 هزار تومان"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <com.ahmad.darwino.CusrtomViews.MyTextView
                        android:id="@+id/activity_darwino_discription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="توضیحات"
                        android:textSize="18sp" />

                    <com.ahmad.darwino.CusrtomViews.MyTextView
                        android:id="@+id/activity_darwino_possibilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="امکانات"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/activity_darwino_register"
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/round_accent_color_button"
                        android:text="ثبت نام در این طرح"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>