<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/vertical_margin_6"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/adapter_blogs_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            app:siShape="@drawable/shape_rounded_rectangle"
            app:srcCompat="@drawable/ic_darwinoplatinum"
            app:siSquare="true"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <com.ahmad.darwino.CusrtomViews.MyTextView
                android:id="@+id/adapter_blogs_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_horizontal|center_vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="موضوع بلاگ" />

            <com.ahmad.darwino.CusrtomViews.MyTextView
                android:id="@+id/adapter_blogs_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="right|center_horizontal|top|center_vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="توضیحات کوتاه بلاگ" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>