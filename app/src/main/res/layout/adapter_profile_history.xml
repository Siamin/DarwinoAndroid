<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/adapter_profile_history_number_background"
            android:gravity="center_horizontal|center_vertical">

            <com.ahmad.darwino.CusrtomViews.MyTextView
                android:id="@+id/adapter_profile_history_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/name_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/adapter_profile_history_rectangle"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:id="@+id/adapter_profile_history_name"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/adapter_profile_history_dropdown"
                    android:layout_weight="100"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="نام دوره انتخاب شده"
                    android:textSize="@dimen/_15ssp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/adapter_profile_history_dropdown"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    app:srcCompat="@drawable/ic_down_arrow_in_small_circle" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/adapter_profile_history_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/teacher_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/adapter_profile_history_rectangle"
                    android:visibility="visible">

                    <com.ahmad.darwino.CusrtomViews.MyTextView
                        android:id="@+id/adapter_profile_history_teacher"
                        style="@style/medium_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:maxLines="2"
                        android:text="مدرس: شهید مدرس" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/date_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/adapter_profile_history_rectangle"
                    android:visibility="visible">

                    <com.ahmad.darwino.CusrtomViews.MyTextView
                        android:id="@+id/adapter_profile_history_date"
                        style="@style/medium_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:maxLines="2"
                        android:text="تاریخ: فردا" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/duration_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/adapter_profile_history_rectangle"
                    android:visibility="visible">

                    <com.ahmad.darwino.CusrtomViews.MyTextView
                        android:id="@+id/adapter_profile_history_period"
                        style="@style/medium_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:maxLines="2"
                        android:text="مدت دوره: 40 ساعت" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/adapter_profile_history_rectangle"
                android:gravity="right|center_horizontal|center_vertical">

                <com.ahmad.darwino.CusrtomViews.MyTextView
                    android:id="@+id/adapter_profile_history_price"
                    style="@style/medium_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="پرداخت شده: 295000 تومان" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>